<div class="container top-page-container">
  <div class="row">

    <div class="col-md-3">
    </div>

    <div class="col-md-6">
      <div class="article-card">
        <div class="header-wrapper clearfix">
          <div class="header-image">
            <!-- FIXME: Image is boilerplate -->
            <%= link_to(image_tag(current_user.image_url), "#") %>
          </div>
          <div class="header-text">
            <div class="header-profile-name">
              <!-- FIXME: Profile name is boilerplate -->
              <span>Takahiro Ishikawa</span>
            </div>
            <div class="header-datetime">
              <!-- FIXME: Datetime is boilerplate -->
              <span>Feb 11</span>
            </div>
          </div>
        </div>
        <div class="main-wrapper clearfix">
          <div class="main-left">
            <div class="main-book">
              <!-- FIXME: Book link is boilerplate -->
              <%= link_to(image_tag("https://images-fe.ssl-images-amazon.com/images/I/51%2ByD4vDr6L.jpg"), "ihttps://www.amazon.co.jp/%E9%8A%80%E6%B2%B3%E3%81%AE%E9%80%9A%E4%BF%A1%E6%89%80-%E9%95%B7%E9%87%8E-%E3%81%BE%E3%82%86%E3%81%BF/dp/4309025978?SubscriptionId=0AVSM5SVKRWTFMG7ZR82&tag=booklog.jp-item-22&linkCode=xm2&camp=2025&creative=165953&creativeASIN=4309025978") %>
            </div>
            <div class="main-bookinfo">
            </div>
          </div>
          <div class="main-right">
            <div class="main-book-review">
            </div>
          </div>
        </div>
        <div class="footer-wrapper clearfix">
          <div class="footer-left">
          </div>
          <div class="footer-right">
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3">
    </div>

  </div>
</div>
